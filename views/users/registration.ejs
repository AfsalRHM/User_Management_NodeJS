<% include('../layouts/header.ejs') %>

<div style="text-align: center;">

    <h1 style="text-decoration: underline;">User Registration Form</h1>

    <% if (typeof alert !== 'undefined') { %>
        <p style="color: red;" ><%= alert %>*</p>
    <% } %>

    <form  action="" method="post" >
        <label for="">Enter Your Name</label><br>
        <input type="text" name="name" style="padding: 10px; width: 300px; margin-top: 0.5em;" placeholder="Enter Name" >
        <br><br>
        <label for="">Enter Your Email</label><br>
        <input type="email" name="email" style="padding: 10px; width: 300px; margin-top: 0.5em;" placeholder="Enter Email" >
        <br><br>
        <label for="">Enter Your Mobile Number</label><br>
        <input type="number"  name="number" style="padding: 10px; width: 300px; margin-top: 0.5em;" placeholder="Enter Mobile Number" >
        <br><br>
        <label for="">Enter Your Password</label><br>
        <input type="password" name="password" style="padding: 10px; width: 300px; margin-top: 0.5em;" placeholder="Enter Password" >
        <br><br>
        <input  type="submit" value="Register">
    </form>

    <%
    if (typeof message !== 'undefined'){
        %>
        <p style="color: green;"><%=message %></p>
        <%
    }
    %>

</div>

<% include('../layouts/footer.ejs') %>