<% include('../layouts/header.ejs') %>

<h1 style="margin-bottom: 20px;text-decoration: underline;">User Update</h1>

<% if (typeof message !== 'undefined') { %>
    <p style="color: red;" class="d-inline-flex p-2 " ><%= message %>*</p>
<% } %>

<form action="" method="post" style="margin-bottom: 20px;">
    <label for="name">Name:</label><br>
    <input type="text" name="name" placeholder="Enter Name" value="<%= user.name %>" style="padding: 10px; width: 300px;"><br><br>
    
    <label for="name">Email:</label><br>
    <input type="email" name="email" placeholder="Enter Email" value="<%= user.email %>" style="padding: 10px; width: 300px;"><br><br>

    <label for="name">Mobile number:</label><br>
    <input type="number" name="number" placeholder="Enter Mobile number" value="<%= user.number %>" style="padding: 10px; width: 300px;"><br><br>

    <label style="margin-right: 10px;">Verified</label>
    <input type="radio" name="verify" value="1" <% if (user.is_verified == 1){%> checked <% } %> style="margin-right: 10px;">

    <label>Unverified</label>
    <input type="radio" name="verify" value="0" <% if (user.is_verified == 0){%> checked <% } %> style="margin-right: 10px;">

    <br><br>

    <input type="hidden" name="id" value="<%= user._id %>">

    <input type="submit" value="Update User" style="padding: 10px; background-color: #007bff; color: #fff; border: none; cursor: pointer; margin-left: 7.5em;">

    <br><br>
</form>

<a href="/admin/dashboard" style="text-decoration: none; color: #007bff; display: block;">Go back to Dashboard</a>

<% include('../layouts/footer.ejs') %>
